# Backend API URL
NEXT_PUBLIC_API_URL=https://api.advanciapayledger.com

# Frontend App URL
NEXT_PUBLIC_APP_URL=https://advanciapayledger.com

# Alternative Domain
NEXT_PUBLIC_APP_URL_ALT=https://advancia.us

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Environment
NEXT_PUBLIC_ENV=production

# WebSocket URL
NEXT_PUBLIC_WS_URL=wss://api.advanciapayledger.com

# Blockchain Network Configuration
NEXT_PUBLIC_DEFAULT_NETWORK=ethereum
NEXT_PUBLIC_SUPPORTED_NETWORKS=ethereum,polygon,base,solana

# Feature Flags
NEXT_PUBLIC_ENABLE_BIOMETRIC=true
NEXT_PUBLIC_ENABLE_QR_SCANNING=true
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true

# Analytics
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Customer Support
NEXT_PUBLIC_SUPPORT_EMAIL=support@advanciapayledger.com
NEXT_PUBLIC_SUPPORT_PHONE=1-800-ADVANCIA
